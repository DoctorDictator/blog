<div id="content">
    <!-- Begin Page Content -->
    <div class="container-fluid">
        <!-- Page Heading -->
        <h1 class="h3 mb-4 text-gray-800">View Profile</h1>
        <div class="row">
            <div class="col-lg-12">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Profile Details</h6>
                    </div>
                    <div class="card-body">
                        <!-- Profile Picture -->
                        <div class="text-center mb-4">
                            <h5>Profile Picture</h5>
                            {{#if user.profilePicture}}
                                <img src="/Uploads/{{user.profilePicture}}" alt="Profile Picture" class="rounded-circle" style="width: 150px; height: 150px; object-fit: cover; margin-bottom: 10px;">
                            {{else}}
                                <p>No profile picture uploaded</p>
                            {{/if}}
                        </div>
                        <!-- Basic Info -->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label><strong>First Name:</strong></label>
                                    <p>{{user.firstName}}</p>
                                </div>
                                <div class="form-group">
                                    <label><strong>Last Name:</strong></label>
                                    <p>{{user.lastName}}</p>
                                </div>
                                <div class="form-group">
                                    <label><strong>Username:</strong></label>
                                    <p>{{user.username}}</p>
                                </div>
                                <div class="form-group">
                                    <label><strong>Email:</strong></label>
                                    <p>{{user.email}}</p>
                                </div>
                                <div class="form-group">
                                    <label><strong>Position:</strong></label>
                                    <p>{{user.position}}</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label><strong>Phone:</strong></label>
                                    <p>{{#if user.phone}}{{user.phone}}{{else}}Not provided{{/if}}</p>
                                </div>
                                <div class="form-group">
                                    <label><strong>Street:</strong></label>
                                    <p>{{#if user.address.street}}{{user.address.street}}{{else}}Not provided{{/if}}</p>
                                </div>
                                <div class="form-group">
                                    <label><strong>City:</strong></label>
                                    <p>{{#if user.address.city}}{{user.address.city}}{{else}}Not provided{{/if}}</p>
                                </div>
                                <div class="form-group">
                                    <label><strong>State:</strong></label>
                                    <p>{{#if user.address.state}}{{user.address.state}}{{else}}Not provided{{/if}}</p>
                                </div>
                                <div class="form-group">
                                    <label><strong>Postal Code:</strong></label>
                                    <p>{{#if user.address.postalCode}}{{user.address.postalCode}}{{else}}Not provided{{/if}}</p>
                                </div>
                                <div class="form-group">
                                    <label><strong>Country:</strong></label>
                                    <p>{{#if user.address.country}}{{user.address.country}}{{else}}Not provided{{/if}}</p>
                                </div>
                            </div>
                        </div>
                        <!-- Bio -->
                        <div class="form-group">
                            <label><strong>Bio:</strong></label>
                            <p>{{#if user.bio}}{{user.bio}}{{else}}No bio provided{{/if}}</p>
                        </div>
                        <!-- Edit Profile Link -->
                        <a href="/admin/profile/edit-profile" class="btn btn-primary">
                            <i class="fas fa-edit"></i> Edit Profile
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</div>
<!-- End of Main Content -->

<style>
    .form-group {
        margin-bottom: 1.5rem;
    }
    .rounded-circle {
        border: 2px solid #d1d3e2;
    }
    .font-weight-bold {
        color: #4e73df;
    }
    p {
        margin: 0;
        color: #5a5c69;
    }
</style>